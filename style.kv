<Screen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # Fond blanc
        Rectangle:
            pos: self.pos
            size: self.size

<Label>:
    color: 0, 0, 0, 1  # Texte noir pour les labels

<Button>:
    background_color: 0.325, 0.569, 0.902, 0.8  # Couleur bleue des boutons
    color: 0, 0, 0, 1  # Texte en blanc sur les boutons

<TextInput>:
    background_color: 1, 1, 1, 1  # Fond blanc pour les champs de texte
    foreground_color: 0, 0, 0, 1  # Texte en noir

